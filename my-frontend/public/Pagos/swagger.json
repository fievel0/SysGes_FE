{
    "openapi": "3.0.0",
    "info": {
      "title": "Payments API",
      "version": "1.0.0",
      "description": "API para la gesti칩n de pagos."
    },
    "paths": {
      "/api/payments": {
        "get": {
          "summary": "Obtener todos los pagos",
          "operationId": "getPayments",
          "responses": {
            "200": {
              "description": "Lista de pagos obtenida correctamente",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/PaymentsDTO" }
                  }
                }
              }
            }
          }
        }
      },
      "/api/payments/find/{id}": {
        "get": {
          "summary": "Buscar pago por ID",
          "operationId": "getPaymentById",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "responses": {
            "200": {
              "description": "Pago encontrado",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/PaymentsDTO" }
                }
              }
            },
            "404": {
              "description": "Pago no encontrado"
            }
          }
        }
      },
      "/api/payments/findAll": {
        "get": {
          "summary": "Obtener todos los pagos",
          "operationId": "findAllPayments",
          "responses": {
            "200": {
              "description": "Lista de pagos obtenida correctamente",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/PaymentsDTO" }
                  }
                }
              }
            }
          }
        }
      },
      "/api/payments/save": {
        "post": {
          "summary": "Guardar un nuevo pago",
          "operationId": "savePayment",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaymentsDTO" }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Pago guardado exitosamente",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/PaymentsDTO" }
                }
              }
            },
            "400": {
              "description": "Datos inv치lidos"
            }
          }
        }
      },
      "/api/payments/update/{id}": {
        "put": {
          "summary": "Actualizar un pago por ID",
          "operationId": "updatePayment",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaymentsDTO" }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Pago actualizado exitosamente"
            },
            "400": {
              "description": "Datos inv치lidos"
            },
            "404": {
              "description": "Pago no encontrado"
            }
          }
        }
      },
      "/api/payments/delete/{id}": {
        "delete": {
          "summary": "Eliminar un pago por ID",
          "operationId": "deletePayment",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            }
          ],
          "responses": {
            "200": {
              "description": "Pago eliminado exitosamente"
            },
            "400": {
              "description": "ID inv치lido"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "PaymentsDTO": {
          "type": "object",
          "properties": {
            "id_pay": { "type": "integer" },
            "date_pay": { "type": "string", "format": "date" },
            "money_pay": { "type": "number", "format": "float" },
            "money_b_pay": { "type": "number", "format": "float" },
            "order_id": { "type": "integer" },
            "order_tot_pay": { "type": "number", "format": "float" }
          }
        }
      }
    }
  }